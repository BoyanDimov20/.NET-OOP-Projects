<Window x:Class="CashdeskManager.LoginWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:CashdeskManager"
        mc:Ignorable="d"
        Title="LoginWindow" Height="450" Width="800">
    <Grid Background="LightGray" Height="428">
        <Label FontSize="20" Content="Username" Margin="262,78,354,318"/>
        <TextBox x:Name="Username" FontSize="15" Text="" TextWrapping="Wrap" Margin="262,116,262,275"/>
        <Label FontSize="20" Content="Password" Margin="262,163,354,233"/>
        <Button Content="Log in" Margin="430,256,262,138" Click="Login"/>
        <TextBlock x:Name="ErrorMessage" Foreground="Red" FontSize="12" Text="" TextWrapping="Wrap" Margin="266,256,370,138"/>
        <PasswordBox x:Name="Password" Margin="262,200,262,191"/>
    </Grid>
</Window>
